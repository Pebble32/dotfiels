export PATH="$HOME/dohop/dohop-dev-tools/bin:$PATH"
export PATH="/opt/homebrew/opt/postgresql@16/bin:$PATH"
export PATH="/opt/homebrew/opt/redis/bin:$PATH"
export PATH="/opt/homebrew/opt/java/bin:$PATH"

export LC_ALL="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"

export PYTHONPATH="~/dohop/libdohop"

# Git aliases
alias ga="git add"
alias gs="git status"
alias gc="git commit"
alias gch="git checkout"
alias gd="git diff"
alias gb="git branch"

# Tmux aliases
alias tm="tmux new -A -s"
alias tml="tmux ls"

# Other aliases
alias ll="ls -la"
alias cat="bat"
alias gri="grep -Ri"
alias pip="pip3"

# Dohop dev aliases
alias nobs2="dh-python3 -m server.local_dev -s bs2"
alias watchbs2="watchexec -w ../robots -r -e py -- dh-python3 -m server.local_dev --run-only bs2"
alias vi="nvim"
alias denv="source dh-venv"
